<h3>All Twitter Posts - <%= @influencer.first_name %></h3>


<table>
  <tr>
    <th>Post</th>
    <th>Actions</th>
  </tr>

  <% @instagram_client.user_recent_media.each do |post| %>
    <tr>
      <td>
        <%= post.id %><br>

        <% if post.images.standard_resolution["url"].present? %>
          <%= image_tag post.images.standard_resolution["url"], width: 200 %>
          <br/>
        <% end %>

        <%= post.caption["text"] if post.caption.present? %>
      </td>
      
      <td><%= link_to 'View Analytics', instagram_post_show_path(@influencer.id,post.id) %></td>
    </tr>
  <% end %>

</table>

<style>
  table, th, td {
      border: 1px solid #ccc;
      border-collapse: collapse;
      width:100%;
  }
  th, td {
      padding: 15px;
      text-align: center;
      font-weight: normal;
  }
</style>
